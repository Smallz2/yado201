<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.yado.Fragments.Task_applicants_Fragment"
    android:background="#FFFAFAFA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/fontColorSecondary"
        android:id="@+id/id_taskNoApplicantText"
        android:textStyle="bold"
        android:text="No applicants yet" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_taskApplicantRecyclerView">
        </android.support.v7.widget.RecyclerView>
    </ScrollView>

</FrameLayout>