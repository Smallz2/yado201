<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_applicantCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <!-- Todo: make a size variable for profile image size -->
        <ImageView
            android:id="@+id/id_applicantPhoto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/smalls" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/id_applicantPhoto"
            android:layout_toRightOf="@id/id_applicantPhoto"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_applicantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Dexter Small"
                android:textColor="@color/fontColorSecondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="View Profile"
                android:textColor="@color/purpleAccent"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/id_acceptApplicant"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/id_cancelApplicant"
            android:layout_toStartOf="@id/id_cancelApplicant"
            android:background="@drawable/purple_btn_stroke"
            android:padding="1dp"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/purpleAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/id_cancelApplicant"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/purple_btn_stroke"
            android:padding="1dp"
            android:text="Decline"
            android:textAllCaps="false"
            android:textColor="@color/purpleAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/id_contactApplicant"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/purple_btn_stroke"
            android:padding="1dp"
            android:visibility="invisible"
            android:text="Contact"
            android:textAllCaps="false"
            android:textColor="@color/purpleAccent"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:background="@color/LightFont"
        android:layout_marginEnd="20dp" />
</com.google.android.material.card.MaterialCardView>