<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.yado.Fragments.Task_Details_Fragment"
    android:background="#FFFAFAFA">

    <ScrollView
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_monetization_on_black_24dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/id_moneyIcon"/>

                <TextView
                    android:id="@+id/id_amountAwardedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Awarded"
                    android:layout_toRightOf="@id/id_moneyIcon"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/id_moneyIcon"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_taskAmountAwarded"
                    android:text="$25"
                    android:layout_below="@id/id_amountAwardedText"
                    android:layout_toRightOf="@id/id_moneyIcon"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/id_moneyIcon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_today_black_24dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/id_startDateIcon"/>

                <TextView
                    android:id="@+id/id_startDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:layout_toRightOf="@id/id_startDateIcon"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/id_startDateIcon"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/id_taskStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Jan, 2018"
                    android:layout_below="@id/id_startDateText"
                    android:layout_toRightOf="@id/id_startDateIcon"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/id_startDateIcon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0.25">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alarm_black_24dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/id_startTimeIcon"/>

                <TextView
                    android:id="@+id/id_startTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:layout_toRightOf="@id/id_startTimeIcon"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/id_startTimeIcon"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/id_taskStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6:25 PM"
                    android:layout_below="@id/id_startTimeText"
                    android:layout_toRightOf="@id/id_startTimeIcon"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/id_startTimeIcon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calender"
                    android:layout_centerVertical="true"
                    android:id="@+id/id_locationIcon"/>

                <TextView
                    android:id="@+id/id_locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:layout_toRightOf="@id/id_locationIcon"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/id_locationIcon"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/id_taskLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brades Road"
                    android:layout_below="@id/id_locationText"
                    android:layout_toRightOf="@id/id_locationIcon"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/fontColorSecondary"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/id_locationIcon" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>